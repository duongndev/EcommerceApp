<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.checkout.fragment.PaymentFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view_payment_method"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:text="Add Payment"
        android:drawableStart="@drawable/ic_plus"
        android:paddingStart="110dp"
        android:gravity="start|center"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edit"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btt_apply_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:text="Apply"
        android:textSize="16sp"
        android:fontFamily="@font/general_sans_medium"
        />

</RelativeLayout>