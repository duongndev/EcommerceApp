<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.auth.signup.SignupFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/general_sans_semibold"
        android:text="Create an account"
        android:textColor="@color/primary900"
        android:textSize="32sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/general_sans_regular"
        android:text="Letâ€™s create your account."
        android:textColor="@color/primary900"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/txt_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/general_sans_medium"
        android:text="Full Name"
        android:textColor="@color/primary900"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_fullName_signup"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_below="@id/txt_fullName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edit"
        android:fontFamily="@font/general_sans_regular"
        android:hint="Enter your full name"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_fullName_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/general_sans_medium"
        android:text="Email"
        android:textColor="@color/primary900"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_email_signup"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_below="@id/txt_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edit"
        android:fontFamily="@font/general_sans_regular"
        android:hint="Enter your email address"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_email_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/general_sans_medium"
        android:text="Password"
        android:textColor="@color/primary900"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_password_signup"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_below="@id/txt_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edit"
        android:fontFamily="@font/general_sans_regular"
        android:hint="Enter your password"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/edt_password_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_button"
        android:text="Create an Account"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_signup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/general_sans_regular"
        android:gravity="center"
        android:text="Or"
        android:textColor="@color/primary900"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/btn_login_with_google"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edit"
        android:fontFamily="@font/general_sans_medium"
        android:gravity="center_vertical"
        android:text="Sign Up with Google"
        android:textSize="16sp"
        android:paddingStart="100dp"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@drawable/logos_google_icon" />

    <TextView
        android:id="@+id/btn_login_with_facebook"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/btn_login_with_google"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_edit"
        android:backgroundTint="#1877F2"
        android:fontFamily="@font/general_sans_medium"
        android:gravity="center_vertical"
        android:paddingStart="100dp"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@drawable/logos_facebook"
        android:text="Sign Up with Facebook"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/general_sans_regular"
            android:gravity="center"
            android:text="Already have an account? "
            android:textColor="@color/primary900"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/general_sans_medium"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/primary900"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>