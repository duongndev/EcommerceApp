<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_edit"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_location" />


        <LinearLayout
            android:id="@+id/layout_item_address"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/radio_button_selected_address"
            android:layout_toEndOf="@id/img_location"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/txt_item_address_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/general_sans_regular"
                android:maxLines="1"
                android:text="123 Street, City, Country"
                android:textColor="@color/primary900"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_item_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/general_sans_regular"
                android:text="123 456 789"
                android:textColor="@color/primary900"
                android:textSize="12sp" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/radio_button_selected_address"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>