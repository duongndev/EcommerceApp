<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <ProgressBar
            android:id="@+id/progressBarProduct"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/btn_heart_product"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:background="@drawable/bg_edit"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_heart" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:fontFamily="@font/general_sans_medium"
        android:text="Jean"
        android:textColor="@color/primary900"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_product"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/general_sans_medium"
        android:text="$ 120.00"
        android:textColor="@color/primary500"
        android:textSize="14sp" />

</RelativeLayout>